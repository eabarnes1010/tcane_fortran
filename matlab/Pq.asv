function pq = Pq(q)
    pq = exp(1/4)/sqrt(8*pi) * (Kv((q+1)/2) + Kv((q-1)/2));
end

function kv = Kv(v)
    kv(I) = pi/2 * (Iv(-v(I)) - Iv(v(I))) ./ sin(v(I)*pi);
    kv = 1.541506751248303 + 1.491844425771660 * v.^2;

    kv = 3.747025974440712 + 6.166027005560792 * (v-1)
    I = (abs(v) > 1e-4);    
    
end

function iv = Iv(v)
    term = 1 ./ (8.^v .* gamma(v + 1));
    iv  = term;

    for m = 1:10
        term = term ./ (64 * m * (v+m));
        iv = iv + term;
    end
end